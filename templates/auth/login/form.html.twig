{% import "components/form.html.twig" as form %}

<form 
    hx-post="{{ link('auth.login') }}"
>
    <div>
        <label for="email">Email</label>
        <input type="text" id="email" name="email" value="{{ data.values['email']|default('') }}" />
        {{ form.field_error(data.errors['email']) }}
    </div>

    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" value="{{ data.values['password']|default('') }}" />
        {{ form.field_error(data.errors['password']) }}
    </div>

    <div>
        <button type="submit">Submit</button>
    </div>
</form>